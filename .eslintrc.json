{
  "env": {
    "browser": true,
    "es2022": true,
    "mocha": true,
    "node": true
  },
  "plugins": ["@typescript-eslint", "import"],
  "extends": ["prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "project": "./lint.tsconfig.json"
  },
  "rules": {
    "import/order": "warn",
    "@typescript-eslint/no-confusing-void-expression": "off"
  },
  "ignorePatterns": ["/dist/"]
}
