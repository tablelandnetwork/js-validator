{
  "name": "@tableland/validator",
  "version": "0.0.1-alpha-3",
  "description": "tableland validator binary repository",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "files": [
    "bin/**/*",
    "dist/**/*.js?(.map)",
    "dist/**/*.d.ts",
    "src/**/*.ts"
  ],
  "scripts": {
    "lint": "eslint '**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier '**/*.{ts,json,sol,md}' --check",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "prepublishOnly": "npm run build",
    "test": "mocha",
    "coverage": "c8 mocha --exit",
    "clean": "rm -rf dist",
    "build:esm": "cp src/module-specific-esm.ts src/module-specific.ts && tsc -p tsconfig.json",
    "build:cjs": "cp src/module-specific-cjs.ts src/module-specific.ts && tsc -p tsconfig.cjs.json",
    "build": "npm run clean && npm run build:esm && npm run build:cjs && node --experimental-fetch dist/esm/build.js && ./fixup.sh"
  },
  "keywords": [
    "tableland",
    "sql",
    "ethereum",
    "database"
  ],
  "license": "MIT AND Apache-2.0",
  "devDependencies": {
    "@tableland/local": "^0.0.4",
    "@types/decompress": "^4.2.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.17",
    "@types/shelljs": "^0.8.11",
    "@types/tar": "^6.1.3",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "c8": "^7.12.0",
    "decompress": "^4.2.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^26.0.0",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.2.0",
    "prettier": "^2.8.1",
    "shelljs": "^0.8.5",
    "tar": "^6.1.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
